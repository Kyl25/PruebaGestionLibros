@model IEnumerable<GestionLibros.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-8">
            <h3>
                Listado de clientes
            </h3>
        </div>
        <div class="col-sm-4">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Clientes">Agregar</a>
        </div>
    </div>
    <br />
    <div class="row">
        @if (Model != null)
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.Id)</td>
                            <td>@Html.DisplayNameFor(m => m.Nombres)</td>
                            <td>@Html.DisplayNameFor(m => m.Apellidos)</td>
                          
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nombres</td>
                                <td>@item.Apellidos</td>
                              
                                <td>
                                    <a asp-controller="Clientes" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                        Editar
                                    </a>
                                    <a asp-controller="Clientes" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No existen registros</p>
            }
            else
            {
                <p>No existen registros</p>
            }
    </div>

</div>


